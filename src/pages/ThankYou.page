<apex:page id="ThankYou" showHeader="false" standardStylesheets="false" sidebar="false" applyHtmlTag="false"
           applyBodyTag="false" docType="html-5.0">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>Cargo Way</title>

        <style>
            html > * {
                margin: 0;
                padding: 0;
            }

            body, h1, p {
                font-family: "Segoe UI", Roboto, sans-serif;
            }

            body {
                  font-family: "Segoe UI", Roboto, sans-serif;
                  background-color: #f2f4f8;
                  background-position: center;
                  background-attachment: fixed;
                  background-size: cover;
                  background-image: url({!URLFOR($Resource.truck_backwards)});
                  backdrop-filter: blur(5px);
            }

            main {
              padding: 2rem;
              font-family: "Segoe UI", Roboto, sans-serif;
              display: flex;
              align-items: center;
              justify-content: center;
              min-height: 100vh;
            }

            h3 {
                margin-top: 0;
                margin-bottom: 1rem;
                color: #2c3e50;
                text-align: center;
            }

            p {
                font-size: 1rem;
                color: #2c3e50;
            }

            .dialog {
                background: #ffffffcf;
                padding: 2rem;
                border-radius: 0.75rem;
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
                width: 100%;
                max-width: 400px;
            }

            @media screen and (max-width: 768px) {
              .dialog {
                padding: 1.5rem;
                max-width: 80%;
                margin: 1rem;
              }
            }

            @media screen and (max-width: 1024px) {
                .dialog {
                    width: min(100%, 400px);
                }
            }
        </style>
    </head>
    <body>
        <main>
            <div class="dialog">
                <h1>Thank you!</h1>
                <p>Your information is registered. We will contact you soon!</p>
            </div>
        </main>
        <c:Footer_c />
    </body>


</apex:page>